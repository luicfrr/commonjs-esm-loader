{
  "name": "commonjs-esm-loader",
  "description": "Loads ESM modules on CommonJS projects",
  "version": "1.0.3",
  "author": "Luiz Carlos Ferreira",
  "license": "MIT",
  "main": "build/index.js",
  "files": [
    "build"
  ],
  "types": "build/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nonam4/commonjs-esm-loader.git"
  },
  "bugs": {
    "url": "https://github.com/nonam4/commonjs-esm-loader/issues"
  },
  "homepage": "https://github.com/nonam4/commonjs-esm-loader",
  "scripts": {
    "lint": "eslint --quiet --fix --ext .js,.ts .",
    "dev": "concurrently \"tsc -w\" \"tsc-alias -w\"",
    "build": "tsc && tsc-alias",
    "publish": "git push --follow-tags origin main && npm publish",
    "release": "yarn lint && yarn build && standard-version && yarn publish"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "concurrently": "^8.2.2",
    "eslint": "8.53.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.29.0",
    "tsc-alias": "^1.8.6",
    "typescript": "^5.2.2",
    "standard-version": "^9.5.0"
  },
  "keywords": [
    "commonjs",
    "esm",
    "loader",
    "module"
  ],
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  }
}
